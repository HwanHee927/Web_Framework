    </div>
    <div id="popup" class="fixed top-0 left-0 w-full h-full bg-gray-900 bg-opacity-50 hidden">
        <div class="container mx-auto h-full flex justify-center items-center">
            <div class="bg-white p-8 rounded shadow-lg">
                <h2 id="popupTitle" class="text-2xl font-bold mb-4">원하는 옵션을 선택하세요!</h2>
                <p id="popupPrice" class="text-lg font-bold text-gray-700 mb-4"></p> <!-- 가격 출력 -->
                <!-- 추가선택 -->
                <div class="mb-4">
                    <h3 class="text-xl font-bold mb-2">추가선택</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div class="flex items-center">
                            <button onclick="selectOption('샷 추가', 500)" class="add-option-button">샷 추가: 500원</button>
                        </div>
                        <div class="flex items-center">
                            <button onclick="selectOption('시럽 추가', 500)" class="add-option-button">시럽 추가: 500원</button>
                        </div>
                    </div>
                </div>
                <!-- 농도선택 -->
                <div>
                    <h3 class="text-xl font-bold mb-2">농도선택</h3>
                    <div class="grid grid-cols-4 gap-4">
                        <div class="flex items-center">
                            <button onclick="selectOption('진하게', 0)" class="add-option-button">진하게: 0원</button>
                        </div>
                        <div class="flex items-center">
                            <button onclick="selectOption('연하게', 0)" class="add-option-button">연하게: 0원</button>
                        </div>
                        <div class="flex items-center">
                            <button onclick="selectOption('얼음 많이', 0)" class="add-option-button">얼음 많이: 0원</button>
                        </div>
                        <div class="flex items-center">
                            <button onclick="selectOption('얼음 적게', 0)" class="add-option-button">얼음 적게: 0원</button>
                        </div>
                    </div>
            </div>
                <!-- 주문 버튼 -->
                <div class="text-center mt-4" style="display: flex; justify-content: space-around;">
                    <button onclick="closePopup()" class="return-menu">취소</button>
                    <button onclick="addToCart(document.getElementById('popupTitle').innerText, totalPrice)" class="payment">담기</button>
                </div>
            </div>
        </div>
    </div>
    </div>
    <div class="container mx-auto px-4 max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-lg mt-8 max-h-full">
        <h1 class="text-2xl font-bold mb-6">장바구니</h1>
        <div id="cart-container" class="space-y-4">
            <!-- 장바구니에 추가된 상품이 여기에 나타납니다 -->
        </div>
        <div class="flex justify-between mt-6">
            <button onclick="clearCart()" class="return-menu">전체취소</button>
            <a href="/payment"><button class="payment">결제하기</button></a>
        </div>
    </div>
    <script>
        let totalPrice = 0; // 총 가격 변수
        let cartItems = []; // 장바구니 아이템 배열
    
        let selectedOptions = []; // 선택한 옵션 배열
    
        function openPopup(menu, price) {
            document.getElementById('popup').style.display = 'block';
            document.getElementById('popupTitle').innerText = menu;
            document.getElementById('popupPrice').innerText = '가격: ₩' + price; // 가격 출력
            totalPrice = price; // 총 가격 초기화
            selectedOptions = []; // 선택한 옵션 배열 초기화
        }
    
        function closePopup() {
            document.getElementById('popup').style.display = 'none';
        }
    
        // 옵션 선택 함수
        function selectOption(optionName, optionPrice) {
            totalPrice += optionPrice; // 옵션 가격을 총 가격에 추가
            selectedOptions.push(optionName); // 선택한 옵션 배열에 추가
            document.getElementById('popupPrice').innerText = '가격: ₩' + totalPrice; // 총 가격 출력
        }
    
        // 장바구니에 상품 추가
        function addToCart(menu, price) {
            const item = {
                menu: menu,
                price: price,
                options: selectedOptions // 선택한 옵션 배열 추가
            };
            cartItems.push(item);
            showCartItems();
            closePopup(); // 팝업 닫기
        }
    
        // 장바구니에 추가된 상품 표시
        function showCartItems() {
            const cartContainer = document.getElementById('cart-container');
            cartContainer.innerHTML = ''; // 기존에 표시된 내용 초기화
    
            cartItems.forEach(item => {
                const itemElement = document.createElement('div');
                let itemText = `${item.menu} - ₩${item.price}`;
                if (item.options.length > 0) {
                    itemText += ` (${item.options.join(', ')})`; // 선택한 옵션 이름들을 쉼표로 구분하여 추가
                }
                itemElement.innerText = itemText;
                cartContainer.appendChild(itemElement);
            });
        }
    
        const orderButtons = document.querySelectorAll('.order-button');
        orderButtons.forEach(button => {
            button.addEventListener('click', function() {
                const menu = this.parentElement.querySelector('h2').innerText;
                const priceText = this.parentElement.querySelector('p').innerText;
                const price = parseInt(priceText.replace(/[^0-9]/g, '')); // 가격에서 숫자만 추출
                openPopup(menu, price);
            });
        });
        
        function clearCart() {
        cartItems = []; // 장바구니 배열 초기화
        showCartItems(); // 장바구니 표시 업데이트
        }
    </script>   
</body>
</html>
